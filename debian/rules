#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
# export ZRT_ROOT=${CURDIR}/zrt
export ZVM_DESTDIR=${CURDIR}/debian/zvm-toolchain
# export ZVM_PREFIX=/usr

%:
	dh $@

override_dh_auto_build:
	make -j16
	rm -fr debian/zvm-toolchain/$(ZVM_PREFIX).saved
	mv debian/zvm-toolchain/$(ZVM_PREFIX) debian/$(ZVM_PREFIX).saved
	mkdir debian/zvm-toolchain/$(ZVM_PREFIX)

override_dh_auto_test:

override_dh_auto_install:
	rm -fr debian/zvm-toolchain/$(ZVM_PREFIX)
	mv debian/$(ZVM_PREFIX).saved debian/zvm-toolchain/$(ZVM_PREFIX)

override_dh_strip:
	dh_strip -Xx86_64-nacl

override_dh_shlibdeps:
	dh_shlibdeps -Xx86_64-nacl

override_dh_makeshlibs:
	dh_makeshlibs -Xx86_64-nacl

